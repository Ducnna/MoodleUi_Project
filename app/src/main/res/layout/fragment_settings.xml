<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App settings"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="start"
        android:paddingBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/icon_general"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/general_ic"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/label_general"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="General"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/icon_space_usage"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/space_usage_ic"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/label_space_usage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Space usage"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        tools:ignore="ExtraText">

        <ImageView
            android:id="@+id/icon_synchronisation"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/synchronisation_ic"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/label_synchronisation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Synchronisation"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/icon_shared_files"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/shared_files_ic"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/label_shared_files"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shared Files"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/icon_about"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/general_ic"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/label_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp" />

    </LinearLayout>

</LinearLayout>