<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Image Banner -->
    <ImageView
        android:id="@+id/banner_image"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="4dp"
        android:contentDescription="Banner Image"
        android:scaleType="centerCrop"
        android:src="@drawable/moodle_homepage_rounded"
        android:padding="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <!-- Course Categories Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_course_categories"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_background"
        android:backgroundTint="@null"
        android:drawableLeft="@drawable/courses_categories_ic"
        android:drawablePadding="5dp"
        android:padding="16dp"
        android:text="@string/course_categories"
        android:textAlignment="viewStart"
        android:textColor="@android:color/black"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/banner_image" />

    <!-- My Courses Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_my_courses"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_background"
        android:backgroundTint="@null"
        android:drawableLeft="@drawable/course_events_ic"
        android:drawablePadding="10dp"
        android:padding="16dp"
        android:text="@string/my_courses"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_course_categories" />

</androidx.constraintlayout.widget.ConstraintLayout>
